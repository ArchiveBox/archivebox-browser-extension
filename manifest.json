{
  "manifest_version": 3,
  "version": "2.1.4",
  "name": "ArchiveBox",
  "description": "Collect URLs and preserve them using a remote ArchiveBox server",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "contextMenus",
    "unlimitedStorage",
    "webRequest",
    "tabs",
    "webNavigation"
  ],
  "optional_permissions": [
    "cookies",
    "history",
    "bookmarks"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["reddit-content.js"]
    }
  ],
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  },
  "action": {
    "default_title": "Save to ArchiveBox",
    "default_icon": {
      "16": "16.png",
      "32": "32.png",
      "48": "48.png",
      "128": "128.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": ["popup.css", "popup.js", "site-handlers.js", "reddit-handler.js"],
    "matches": ["*://*/*"]
  }],
  "commands": {
    "save-to-archivebox-action": {
      "description": "Save URL to ArchiveBox",
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      }
    }
  }
}
